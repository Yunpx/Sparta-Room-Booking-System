<p id="notice"><%= notice %></p>
<%= stylesheet_link_tag "bookings" %>
<%= stylesheet_link_tag "application" %>

<h1>Month</h1>
  <table id='calendar'>
   <tr>
     <th>Sunday</th><th>Monday</th>
     <th>Tuesday</th><th>Wednesday</th>
     <th>Thursday</th><th>Friday</th>
     <th>Saturday</th>
    </tr>
    <tr>
      <% i = 0 %>
      <% u = 0 %>

      <% day_store = {} %>

      <% @days.each do |day| %>
        <%  day_store[i] = day %>
        <%  i += 1 %>
      <% end %>

    <% @beginning_of_month = Date.current.beginning_of_month %>
    <% @end_of_month = Date.current.end_of_month + 1.months %>

  <% (@beginning_of_month..@end_of_month).each do |d| %>
      <% if d == @beginning_of_month %>
        <% d.wday.times do %> <td class='offset'></td> <% end %>
      <% end %>


  <% if d.wday == 0 %> </tr><tr> <% end %>
    <td> <%= link_to d.day, day_store[u] %> </td>
    <% u += 1 %>
  <% end %>

    </tr>
  </table>