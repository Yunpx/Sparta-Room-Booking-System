<table>
  <thead>
    <tr>
      <th>Zelda</th>
      <th>Mario</th>
      <th>Pac-Man</th>
      <th>Frogger</th>
      <th>Cortana</th>
      <th>Tetris</th>
      <th>Breakout</th>
    </tr>
  </thead>

  <tbody>
    <% @days.bookings.each do |booking| %>
    <% if booking.id % 7 == 0%>
      <% if booking.note %>
        <tr></tr>
      <td class= <%= booking.room.room_name %>><%= link_to booking.id, edit_booking_path(booking) %></td>
      <% else %>
          <td><%= link_to booking.id, edit_booking_path(booking) %></td>
          <tr></tr>

      <% end %>
    <%else%>
      <% if booking.note %>
        <td class= <%= booking.room.room_name %>><%= link_to booking.id, edit_booking_path(booking) %></td>
        <% else %>
          <td><%= link_to booking.id, edit_booking_path(booking) %><%= booking.user_id %></td>
      <% end %>
    <%end%>
    <% end %>
  </tbody>
</table>

