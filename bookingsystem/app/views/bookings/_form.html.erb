<%= stylesheet_link_tag "bookings" %>

<%= form_with(model: booking, local: true) do |form| %>
  <% if booking.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

      <ul>
      <% booking.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form_box">
    <div class="field">
        <%= form.label :Name, class:'namefield' %>
        <!-- Default value of textbox is User 1 if not logged in -->
        <!-- Otherwise if logged in the textbox will display only the user logged in -->
        <%= form.text_field :name, placeholder: "Please Enter A Name..." %>
      </div>

      <div class="field">
        <%= form.label :Email, class:'namefield' %>
        <%= form.text_field :email, placeholder: "example@spartaglobal.com?" %>
      </div>

    <div class="field">
      <%= form.label :Room_name, class:'roomfield' %>
      <%= collection_select(:booking, :room_id, Room.all, :id, :room_name) %>
    </div>

      <div class="field">
        <p><%= form.label :Participants, class:'participantsfield' %>
        <%= form.number_field :participants, :class => 'text_field', in: 1..15 %> Members</p>
      </div>

    <div class="field">
      <%= form.label :Date, class: 'datefield' %>
      <%= form.date_select :date %>
    </div>

    <div class="field">
      <%= form.label :Start, class: 'startfield' %>
      <%= form.time_select :starttime, {:minute_step => 60, start_hour: 8, end_hour: 19} %>
    </div>

    <div class="field">
      <p><%= form.label :End, class: 'endfield' %>
      <%= form.time_select :endtime, {:minute_step => 60, start_hour: 8, end_hour: 19} %>
    </div>

    <div class="field">
      <%= form.label :Importance, class: 'importancefield' %>
      <%= form.select(:importance, options_for_select([['Normal-!', '!'], ['Important-!!', '!!'], ['Urgent-!!!', '!!!']]), {:prompt => "Select Importance"}) %>
    </div>

    <div class="field">
      <%= form.label :Category, class: 'categoryfield' %>
      <%= form.select(:category, options_for_select([['Team Huddle', 'Team Huddle'], ['Client Interview', 'Client Interview'], ['Team Meeting', 'Team Meeting'], ['Executive Meeting', 'Executive Meeting'], ['Phone Interview', 'Phone Interview']]), {:prompt => "Select Category"} )%>
    </div>

      <div class="field">
        <%= form.label :Additional_Note %>
        <%= form.text_area :note, placeholder: "Reason For Meeting? \nParticipants?" %>
      </div>

    <div class="actions">
      <%= form.submit "Book Room" %>
    </div>
  </div>


<% end %>
