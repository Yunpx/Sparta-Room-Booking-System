<%= stylesheet_link_tag "bookings" %>
<p id="notice"><%= notice %></p>


<h1>Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Zelda</th>
      <th>Mario</th>
      <th>Pac-Man</th>
      <th>Frogger</th>
      <th>Cortana</th>
      <th>Tetris</th>
      <th>Breakout</th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
        <% if booking.id % 7 == 0%>
          <% if booking.note %>
            <tr></tr>
            <td class="booked"><%= booking.inspect %></td>
          <% else %>
              <tr></tr>
              <td><%= link_to booking.id, edit_booking_path(booking) %></td>
          <% end %>
        <%else%>
          <% if booking.note %>
            <td class="booked"><%= booking.inspect %></td>
          <% else %>
            <td><%= link_to booking.id, edit_booking_path(booking) %><%= booking.user_id %></td>
          <% end %>
        <%end%>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Booking', new_booking_path %>
