<%= stylesheet_link_tag "bookings" %>
<p id="notice"><%= notice %></p>


<h1>Bookings</h1>
<div class="timing">
  <table>
    <th>Time</th>
    <tr><td>08:00</td></tr>
    <tr><td>09:00</td></tr>
    <tr><td>10:00</td></tr>
    <tr><td>11:00</td></tr>
    <tr><td>12:00</td></tr>
    <tr><td>13:00</td></tr>
    <tr><td>14:00</td></tr>
    <tr><td>15:00</td></tr>
    <tr><td>16:00</td></tr>
    <tr><td>17:00</td></tr>
    <tr><td>18:00</td></tr>
    <tr><td>19:00</td></tr>


  </table>
</div>

<table>
  <thead>
    <tr>
      <th>Zelda</th>
      <th>Mario</th>
      <th>Pac-Man</th>
      <th>Frogger</th>
      <th>Cortana</th>
      <th>Tetris</th>
      <th>Breakout</th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
        <% if booking.id % 7 == 0%>
          <% if booking.note %>
            <tr></tr>
            <% if booking.room.room_name == "Mario" %>
              <td class="mariobg"><%= 'booked' %></td>
              <% elsif booking.room.room_name == "Zelda"%>
                <td class="zeldabg"><%= 'booked' %></td>
              <% elsif booking.room.room_name == "Pac-Man"  %>
                <td class="pacmanbg"><%= 'booked' %></td>
              <% elsif  booking.room.room_name == "Frogger" %>
                <td class="froggerbg"><%= 'booked' %></td>
              <% elsif booking.room.room_name == "Cortana" %>
                <td class="cortanabg"><%= 'booked' %></td>
              <% elsif booking.room.room_name == "Tetris" %>
                <td class="tetrisbg"><%= 'booked' %></td>
              <% elsif booking.room.room_name == "Breakout" %>
                <td class="breakoutbg"><%= 'booked' %></td>
              <% end %>
          <% else %>
              <tr></tr>
              <td><%= link_to 'book', edit_booking_path(booking) %></td>
          <% end %>
        <%else%>
          <% if booking.note %>
          <% if booking.room.room_name == "Mario" %>
            <td class="mariobg"><%= 'booked' %></td>
            <% elsif booking.room.room_name == "Zelda"%>
              <td class="zeldabg"><%= 'booked' %></td>
            <% elsif booking.room.room_name == "Pac-Man"  %>
              <td class="pacmanbg"><%= 'booked' %></td>
            <% elsif  booking.room.room_name == "Frogger" %>
              <td class="froggerbg"><%= 'booked' %></td>
            <% elsif booking.room.room_name == "Cortana" %>
              <td class="cortanabg"><%= 'booked' %></td>
            <% elsif booking.room.room_name == "Tetris" %>
              <td class="tetrisbg"><%= 'booked' %></td>
            <% elsif booking.room.room_name == "Breakout" %>
              <td class="breakoutbg"><%= 'booked' %></td>
            <% end %>
                      <% else %>
            <td><%= link_to 'book', edit_booking_path(booking) %><%= booking.user_id %></td>
          <% end %>
        <%end%>
    <% end %>
  </tbody>
</table>

<br>

