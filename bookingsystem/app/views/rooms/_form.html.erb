  </div>

  <div class="field">
    <%= form.label :endtime %>
    <%= form.datetime_select :endtime %>
  </div>

  <div class="field">
    <%= form.label :capacity %>
    <%= form.number_field :capacity %>
  </div>

  <div class="field">
    <%= form.label :importance %>
    <%= form.text_field :importance %>
  </div>

  <div class="field">
    <%= form.label :note %>
    <%= form.text_area :note %>
  </div>

  <div class="field">
    <%= form.label :availability %>
